[ui]
username = Gary Bernhardt <gary.bernhardt@gmail.com>

[defaults]
#log = --graph --style compact
diff = -p
qnew = -D --git
qrefresh = -D --git
qseries = -s
qimport = --git

[diff]
git=1

[extdiff]
cmd.vimdiff = mvim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
pager=LESS='FSRX' less
ignore=version, help, update, push, pull, merge, fetch, convert, clone, record, crecord, grep, status, add, addremove, revert, commit, init

[git]
intree=1

[extensions]
churn=
hgk=
mq=
record=
graphlog=
color=
rebase=
transplant=
bookmarks=
record=
extdiff=
pager=
hggit=

